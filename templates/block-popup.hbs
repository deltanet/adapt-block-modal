{{! Maintainers - Robert Peek}}
<div class="block-popup-inner {{_blockPopup._classes}}">

    {{#each _blockPopup._items}}
        {{#if _buttonGraphic}}
        <a href="#" class="block-popup-graphic-button block-popup-button-states-image" role="button" aria-label="{{_ariaLabels.openPopup}}">
            <img src="{{_buttonGraphic.src}}" alt="{{_buttonGraphic.alt}}"/>
            <img src="{{_buttonGraphic.srcHover}}" class="block-popup-button-image-hover" alt="{{_buttonGraphic.alt}}" title="{{_buttonGraphic.title}}" >
            <img src="{{_buttonGraphic.srcVisited}}" class="block-popup-button-image-visited" alt="{{_buttonGraphic.alt}}" title="{{_buttonGraphic.title}}" >
        </a>
            {{else}}
            <a href="#" class="block-popup-open-button" role="button" aria-label="{{_ariaLabels.openPopup}}">
                <span class="block-popup-open-button-text">{{_buttonTitle}}</span>
            </a>
        {{/if}}
    {{/each}}

    <div class="block-popup-shadow"></div>

    <div class="block-popup-content">
        <div class="content-popup-done clearfix">
            <a href="#" class="content-popup-icon-close icon icon-cross" aria="{{_accessibility._ariaLabels.popUp}}"></a>
        </div>
        <div class="block-popup-content-inner">
            {{#each _blockPopup._items}}
            <div class="block-popup-content-item component-item">
                <div class="block-popup-content-item-inner component-item-inner clearfix">
                    <div class="block-popup-contents">
                        <div class="block-popup-contents-inner">
                            {{#if title}}
                                <h5 class="block-popup-content-title">
                                    {{{title}}}
                                </h5>
                            {{/if}}
                            {{#if body}}
                                <div class="block-popup-content-body">
                                    {{{body}}}
                                </div>
                            {{/if}}
                        </div>
                    </div>
                    <div class="block-popup-item-graphic">
                        <img src="{{_itemGraphic.src}}" alt="{{_itemGraphic.alt}}"/>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>

</div>